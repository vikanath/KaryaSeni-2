<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bisque"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/judulLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:typeface="monospace">
    </TextView>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judulLogIn"
        android:text="Email"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp">
    </TextView>

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editEmail"
        android:text="Password"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp">
    </TextView>

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/atau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editPassword"
        android:text="Atau Masuk dengan"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btnGoogle"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/atau"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btnFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:layout_marginLeft="200dp"
        android:layout_below="@+id/atau"
        />


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGoogle"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="25dp"
        android:text="Log In"
        android:textSize="20sp">
    </Button>

    <Button
        android:id="@+id/btnLupa"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_marginLeft="25dp"
        android:text="lupa password?"
        android:textStyle="italic"
        android:textColor="@color/Brown">
    </Button>

    <TextView
        android:id="@+id/daftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLupa"
        android:text="Belum punya akun?"
        android:textStyle="italic"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp">
    </TextView>

    <Button
        android:id="@+id/btnRegis"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/daftar"
        android:layout_marginLeft="25dp"
        android:text="SIGN UP"
        android:textSize="20sp"
        android:textColor="@color/DarkCyan">

    </Button>
</RelativeLayout>